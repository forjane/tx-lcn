<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOG_HOME" value="target/logs"/><!--定义日志文件的存储地址-->

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %p %c[%t-%M-%L]->%m%n</pattern>
        </encoder>
    </appender>

    <appender name="file.info" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${LOG_HOME}/info-%d{yyyyMMdd}.log</FileNamePattern>
            <maxHistory>30</maxHistory><!--日志保存天数-->
        </rollingPolicy>
        <encoder>
            <charset>utf-8</charset>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %p %c[%t-%M-%L]->%m%n</pattern>
        </encoder>
        <append>false</append>
        <prudent>false</prudent>
    </appender>

    <appender name="file.error" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${LOG_HOME}/error-%d{yyyyMMdd}.log</FileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <charset>utf-8</charset>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %p %c[%t-%M-%L]->%m%n</pattern>
        </encoder>
        <append>false</append>
        <prudent>false</prudent>
        <filter class="ch.qos.logback.classic.filter.LevelFilter"><!-- 只打印错误日志 -->
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>
    <logger name="com.codingapi" level="WARN"/>
    <logger name="com.codingapi.txlcn.txmsg.netty.handler" level="DEBUG"/>
    <root level="INFO">
        <appender-ref ref="console"/>
        <appender-ref ref="file.info"/>
        <appender-ref ref="file.error"/>
    </root>
</configuration>